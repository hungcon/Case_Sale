	</header>
<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-3"><i class="fa fa-shopping-cart" aria-hidden="true"></i>   Your cart</h1>
  </div>
</div>
  <div class="container text-center">
    <div class="row">
    <a name="" id="" class="btn btn-primary" href="/shop" role="button" style="margin-bottom: 30px">Continue Shopping</a>
    <a name="" id="" class="btn btn-info" href="/editAccount" role="button" style="margin-bottom: 30px">Change Account</a>
    <hr>
      <table class="table table-striped table-sm table-bordered table-hover table-inverse ">
      <thead class="thead-inverse|thead-default">
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
        </thead>
       <tbody>
       <% var total = 0; %>
       <% saleDetail.forEach(function(motsp){ %>
       <% total = total + motsp.price*motsp.quantity %>
       <form action="/sua/<%= motsp._id %>" method="post">
          <tr>
            <td scope="row" style="text-center" class="anhsp"><img src="<%= motsp.image %>" alt="" class="img-fluid"></td>
           <td >
              <input type="number" name="quantity" id="quantity" min="1" value="<%= motsp.quantity %>">
           </td>
           <td ><%= motsp.price*motsp.quantity %></td>
           <td>
             <a onclick="return xoahaykhong('Bạn có chắc chắn muốn xoá không?');" name="remove" id="remove" class="btn btn-danger" href="/xoa/<%= motsp._id %>" role="button">Remove</a>
             <button type="submit" class="btn btn-success">Update</button>
           </td>
          </tr>
          </form>
       </tbody>
       <% }) %>
    </table>
      <div class="col-md-8"></div>
      <div class="col-md-4">
        <h3>Total: <%= total %></h3><span><button type="button" class="btn btn-danger-outline">Pay Now</button></span>
      </div>
    </div>
  </div>
      <script type="text/javascript">  
      function xoahaykhong(tinnhan){
        if(window.confirm(tinnhan) == true){
          return true
        }
        return false;
      }
    </script>
<% include templates/footer %>