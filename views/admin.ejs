<% include templates/headeradmin %>
<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-3"><i class="far fa-user-circle"></i>   Admin Layout</h1>
  </div>
</div>
  <div class="container text-center">
    <div class="row">
    <a name="" id="" class="btn btn-primary" href="/shop" role="button" >View Your Shop</a>
    <a name="" id="" class="btn btn-success" href="/add-product" role="button" >Add Product</a>
    <hr>
     <table class="table table-striped table-sm table-bordered table-hover table-inverse ">
       <thead class="thead-inverse">
         <tr>
           <th>Product Code</th>
           <th>Name</th>
           <th>Description</th>
           <th>Image</th>
           <th>Price</th>
           <th>Product Info</th>
           <th>Color</th>           
           <th>Action</th>           
         </tr>
         </thead>
         <tbody>
         <% data.forEach(function(motsp){%>
           <tr>
             <td scope="row" style="width: 90px"><%= motsp.productCode %></td>
             <td style="width: 90px"><%= motsp.name %></td>
             <td style="width: 90px"><%- motsp.description %></td>
             <td style="width: 90px"><img src="<%= motsp.productImages %>" alt="" class="img-fluid"></td>
             <td style="width: 70px"><%= motsp.productPrice %></td>
             <td style="width: 90px"><%- motsp.productInfo %></td>
             <td style="width: 70px"><%= motsp.color %></td>
             <td style="width: 130px">
             <a onclick="return xoahaykhong('Bạn có chắc chắn muốn xoá không?');" name="remove" id="remove" class="btn btn-danger" href="/xoasp/<%= motsp._id %>" role="button">Remove</a>
             <a name="" id="" class="btn btn-info" href="/editProduct.<%= motsp.id %>" role="button">Edit</a>
           </td>
           </tr>
           <tr>
          <% }) %>
         </tbody>
     </table>
     </div>
    </div>
          <script type="text/javascript">  
      function xoahaykhong(tinnhan){
        if(window.confirm(tinnhan) == true){
          return true
        }
        return false;
      }
    </script>
<% include templates/footer %>