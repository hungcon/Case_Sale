<% include templates/headersale %>
	<header>
		<div class="heading">
			<div class="container">
				<div class="row">
					<div class="col-lg-5 ">
						<div class="heading--logo __logo">
							<a href="#">
								<img src="./images/logo.gif" class="img-fluid">
							</a>
							<div class="heading--title __title">
								<a href="home">Casies</a>
							</div>
						</div>
						<div class="btn--navbar float-right">
  							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    							<span class="btn--icon fas fa-bars"></span>
  							</button>
						</div>
					</div>
					<div class="col-lg-7 headring--nav">
						<nav class="navbar navbar-expand-lg ">							
  							<div class="collapse  navbar-collapse" id="navbarNav">
    							<ul class="navbar-nav ml-auto">
      								<li class="nav-item active">
        								<a class="nav-link link-child" href="/">Home</a>
      								</li>
      								<li class="nav-item">
        								<a class="nav-link" href="shop">Shop</a>
      								</li>
      								
      								<li class="nav-item">
        								<a class="nav-link" href="contact">Contact us</a>
      								</li>
      								<li class="nav-item">
                        <% user.forEach(function(user1){ %>
                          <% if(!user1.email){ %>
        								    <a class="nav-link" href="login">Login</a>
                            <% }else{ %>
                            <a class="nav-link" href="logout">Logout</a>
                          <% 
                            }
                            }) 
                          %>
                      </li>
      								<li class="nav-item cart">
        								<a class="nav-link" href="sale">
											<i class="fas fa-shopping-bag"></i>
        								</a>
      								</li>
    							</ul>
  							</div>

						</nav>
					</div>
				</div>
			</div>
			
		</div>
	</header>
	<div class="admin">
			<div class="container">
				<a href="/shop" class="btn btn-primary" role="button">View  shop</a>
				<a href="/sale" class="btn btn-success" role="button">Back to cart</a>
				<div class="row">
					<div class="col-md-6 form--img">
						<img src="./images/admin_logo.jpg" alt="" class="img-fluid"/>
					</div>
					<div class="col-md-6 form--admin">
									
						<!-- dang ky ne -->
	
					<div class="themsanpham">
						<div class="admin--icon">
							<img src="./images/user_au_logo.png" alt="" class="img-fluid"/>
						</div>
						<% user.forEach(function(user1){ %>
						<form action="/changeAccount.<%= user1.id %>" method="POST" id="suataikhoan">
							  <div class="form-group">
									<label for=""><i class="fas fa-envelope"></i>Email</label>
									<input type="text" class="form-control email" id="id" aria-describedby="emailHelp"  name="email" value="<%= user1.email %>" >
							  </div>
								<div class="form-group">
									<label for=""><i class="fas fa-key"></i>New Password</label>
									<input type="password" class="form-control newPassword" id="newPassword"  name="newPassword" placeholder="New Password">
							  </div>
							  <div class="form-group">
									<label for=""><i class="fas fa-key"></i>Retype Password </label>
									<input type="password"  class="form-control passwordConf" id="passwordConf" placeholder="Retype Password" name="passwordConf">
							  </div>
							  <% }) %>
							  <button type="submit" class="btn btn-info disabled">Change Account</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
	<script type="text/javascript" src="./javascripts/editProduct.js"></script>
	</body>
</html>
	