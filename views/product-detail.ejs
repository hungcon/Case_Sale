<% include templates/headersale %>
	<header>
		<div class="heading">
			<div class="container">
				<div class="row">
					<div class="col-lg-5 ">
						<div class="heading--logo __logo">
							<a href="#">
								<img src="./images/logo.gif" class="img-fluid">
							</a>
							<div class="heading--title __title">
								<a href="home">Casies</a>
							</div>
						</div>
						<div class="btn--navbar float-right">
  							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    							<span class="btn--icon fas fa-bars"></span>
  							</button>
						</div>
					</div>
					<div class="col-lg-7 headring--nav">
						<nav class="navbar navbar-expand-lg ">							
  							<div class="collapse  navbar-collapse" id="navbarNav">
    							<ul class="navbar-nav ml-auto">
      								<li class="nav-item active">
        								<a class="nav-link link-child" href="/">Home</a>
      								</li>
      								<li class="nav-item">
        								<a class="nav-link" href="shop">Shop</a>
      								</li>
      								
      								<li class="nav-item">
        								<a class="nav-link" href="contact">Contact us</a>
      								</li>
      								<li class="nav-item">
									<% if(user){%>
        								<a class="nav-link" href="logout">Logout</a>
                            			<% }else{ %>
                            			
										<a class="nav-link" href="login">Login</a>
                          			<% }
									
                         			 %>
                     				 </li>
      								<li class="nav-item cart">
        								<a class="nav-link" href="sale">
											<i class="fas fa-shopping-bag"></i>
        								</a>
      								</li>
    							</ul>
  							</div>

						</nav>
					</div>
				</div>
			</div>
			
		</div>
	</header>
		<div class="background1"></div>
		<!-- product detail -->
		<div class="product-detail">
			<div class="container">
				<div class="row">
				 <% data.forEach(function(motsp){
					 if(motsp.productCode == id){ %>
					<div class="col-md-6 ">
						<div class="images">
							<img src="<%= motsp.productImages %>" alt="" class="img-fluid">
						</div>
						<div class="product-intro">
							<p><%- motsp.description %></p>
						</div>
					</div>
					<div class="col-md-6 right">
					<form action="sale" method="post">
						<div class="product-name"><%= motsp.name %></div>
						<div class="product-id">SKU: <%= motsp.productCode %></div><input type="hidden" name="productCode" value="<%= motsp.productCode %>">
						<div class="product-price"><%= motsp.productPrice %></div><input type="hidden" name="productPrice" value="<%= motsp.productPrice %>">
						<div class="product-color">Color: <%= motsp.color %></div>
						<div class="color"><span></span></div>
						<div class="product-quantity">
							<div class="quantity">Quantity</div>
							<input type="number" name="quantity" value="1">
						</div>
						<% if(user){ %>
						<div class="add-to-cart">
							<a  href="/sale">
								<button >ADD TO CART</button>
							</a>
						</div>
						<% }else{ %>
						<div class="adam">
							<a  href="/login" class="chung">
								ADD TO CART
							</a>
						</div>
						<% } %>
						<input type="hidden" name="productImages" value="<%= motsp.productImages %>">
						<% if(user){ %>
						<% user.forEach(function(user1){%>
								<input type="hidden" name="email" value="<%= user1.email %>">
						<% 
							})
						}
						%>
					</form>
						<div class="product-info">
							<div class="product-title">
								<h2>Product info</h2>
								<div class="arrow">
									<i class="icon1 fas fa-minus"></i>
								</div>
							</div>
							<div class="product-text">
								<p><%- motsp.productInfo %></p>
							</div>
						</div>
					</div>
				</div>
				<% 
					}
					})
				%>
			</div>
		</div>
     <% include templates/footer %>

		<script type="text/javascript" src="./javascripts/product.js"></script>
	</body>
</html>